---
type Item = {
  title: string;
  body: string;
  icon: string;
  iconAlt?: string;
};

type Props = {
  title: string;
  items: Item[];
};

const { title, items } = Astro.props;
const normalized = Array.isArray(items) ? items.slice(0, 3) : [];
---

<section class="tcc card-section">
  <h2 class="card-title">{title}</h2>
  <div class="scroller">
    <div class="tcc__card card">
      {normalized.map((it) => (
        <article class="tcc__col">
          <h3 class="tcc__colTitle">{it.title}</h3>
          <p class="tcc__body">{it.body}</p>

          <div class="tcc__iconWrap">
            <img class="tcc__icon" src={it.icon} alt={it.iconAlt ?? ""} loading="lazy" />
          </div>
        </article>
      ))}
    </div>
  </div>
  <img style="display: none;" class="mobile-only" src="./images/dots.svg"></img>
</section>

